@import "whitespace-reset.css"
@import "mixins"


body
  background: url("../images/background-image.png")
  font: normal 14px "Lucianda", Helvetica, Arial, sans-serif
  overflow: scroll
body > header 
  width: 1000px
  margin: 0 auto
  display: flex
  justify-content: space-between
  padding: 50px 0
  border-bottom: 1px solid #787878
  span
    display: inline-block
    box-sizing: border-box
    font-size: 10px
    letter-spacing: 1px
  span.right
    width: 49%
    text-align: center
    color: #fff
    position: relative
    padding: 7px 15px 7px 20px
    background: linear-gradient(to bottom, #d60041 0%, #a90040 100%)
    font-size: 12px
    text-transform: uppercase
    &:before
      content: ""
      display: block
      width: 0
      height: 0
      position: absolute
      left: 0
      top: 0
      border-top: 14px solid #000
      border-right: 14px solid transparent
      border-bottom: 14px solid transparent
      border-left: 14px solid #000
    span.count
      font-size: 12px
      margin-right: 4px
  span.left
    width: 49%
    padding: 8px 5px
    text-align: center
    background: #000
    color: #b0b0b0
    text-transform: uppercase
  div.cart_summary
    width: 220px
body main
  width: 1000px
  margin: 0 auto
  #menu
    ul.dishes
      display: grid
      grid-template-columns: repeat(5, 1fr)
      li
        background-color: #fff
        margin-top: 20px
        box-sizing: border-box
        position: relative
        height: 340px
        h2
          color: #ab7829
          text-transform: capitalize
          font-size: 1.25rem
          font-weight: 100
          text-align: center
          padding: 25px 0 10px 0
          letter-spacing: 1px
        article
          box-shadow: 2px 0px 2px -2px #888;
          position: absolute
          height: 100%
          z-index: 10
          p
            text-align: center
            color: #b0b0b0
            margin-bottom: 20px
          header
            &:hover
              cursor: pointer
              h2
                color: #000
              &:after
                content: url("/images/arrow-right.png")
                box-sizing: border-box
                padding: 70px 85px
                position: absolute
                width: 200px
                height: 200px
                z-index: 15
                top: 0
                left: 0
                background: rgba(0, 0, 0, 0.6)
        a
          display: block
          text-decoration: none
          font-size: 0.8rem
          color: #d60041
          text-transform: uppercase
          text-align: center
          padding: 13.5px 0
          border-top: 1px dotted #888
          transition: none
          &:before
            content: "+"
            margin-right: 4px
            font-weight: bold
          &:hover
            background #d60041
            color: #fff
            transition: background-color 1s, color 1s;
  #item
    margin-top: 20px
    height: 600px
    background: url("../images/sushi-preview.png")
    display: none
    div.wrapper
      padding: 200px 0 200px 0
    section
      display: grid
      grid-template-columns: 100px 200px auto 200px 100px
      height: 200px
      div.nav
        background-color: #000
        &:hover
          background: #d60041;
          transition: background 0.35s;
          cursor: pointer
      div.prev
        img
          margin: 80px 0 0 30px
      div.next
        img
          margin: 80px 0 0 40px
      figure img
        display: block
      article, aside
        background-color: #fff
      article
        border-right: 1px dotted #bbb
        h1
          font-size: 2.2rem
          font-weight: 100
          padding: 20px 0 0 20px
        p
          padding: 5px 0 50px 20px
          font-size: 0.75rem
        footer
          border-top: 1px dotted #bbb
          h2
            font-size: 2rem
            font-weight: 100
            color: #777
            display: inline-block
            padding: 15px 20px
          a
            float: right
            button()
            float: right
            margin: 20px 20px 0 0
            &:before
              addPlus()
        a.close
          text-decoration: none
          transform: rotate(45deg)
          color: #000
          float: right
          font-size: 1.6rem
          margin: 10px 20px 0 0
      aside
        padding: 25px 15px
        h3
          text-align: center
        table 
          padding: 10px 0 0 8px
          tr
            text-align: left
          td:first-child
            color: #777
          td
            font-size: 0.75rem
            + td
              padding: 0 0 0 35px
              text-align: right
  #cart
    display: none
    background: #000
    font-size: 0.7rem
    height: 120px
    .flex-container
      display: flex
      justify-content: space-between
    figure img
      height: 100px
    ul 
      display: flex
      max-width: 700px
      overflow: hidden
      p
        color: #FFF
        text-align: right
        padding: 4px
    section
      width: 200px
      background: #1f1f1f
      padding: 25px 0px 10px 15px
      h3
        font-size: 10px
        text-transform: uppercase
        color: #b0b0b0
      .total
        margin: 5px 0
        font-size: 30px
        color: #fff
      footer
        margin-top: 10px
        a
          text-decoration: none
          text-align: right
          box-sizing: border-box
        a.left
          width: 40%
          color: #ff3170
          text-transform: uppercase
        a.right
          width: 60%
          color: #fff
          padding: 7px 25px 7px 35px
          background: linear-gradient(to bottom, #d60041 0%, #a90040 100%)
          text-transform: uppercase
          position: relative
          &:before
            content: ""
            display: block
            width: 0
            height: 0
            top: 0
            left: 0
            right: 0
            position: absolute
            border-top: 14px solid #1f1f1f
            border-right: 14px solid transparent
            border-bottom: 14px solid transparent
            border-left: 14px solid #1f1f1f
  #checkout
    div
      background: url("../images/sushi-preview.png")
      height: 60px
    .image_top
      background-position: top
    .image_bottom
      background-position: bottom
    section
      background: #fff
      padding: 50px 100px
      p
        color: #787878
        text-align: right
        margin-top: 10px
        .total
          font-size: 2rem
          color: #000
          margin-left: 5px
      h1
        font-size: 2.6rem
        margin: 0 0 80px 0
      img
        width: 100px
      table
        width: 100%
        border-collapse: collapse
        text-align: left
        th
          text-transform: uppercase
        th:last-child
          text-align: right
        th:nth-child(3)
          text-align: center
        td
          border-top: 1px solid #b0b0b0
          border-bottom: 1px solid #b0b0b0
          p
            display: inline-block
            margin: 0 7px
            color: #000
          span
            &:hover
              cursor: pointer
        td:nth-child(2)
          font-size: 1.2rem
        td:nth-child(3)
          text-align: center
        td:last-child
          text-align: right
          font-size: 1.2rem
      footer
        text-align: right
        margin-top: 50px
        form
          display: inline-block
          input
            button()
            padding: 15px
            letter-spacing: 0.8px
            cursor: default
          margin-left: 20px
        a
          text-decoration: none
          text-transform: uppercase
          color: #d60041

    
  