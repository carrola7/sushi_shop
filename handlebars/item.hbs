<div class="wrapper">
  <section>
    <div class="nav prev">
      <img src="/images/nav-prev.png" />
    </div>
    <figure>
      <img src="{{image}}"" />
    </figure><!--
 --><article>
      <a class="close" href="#">+</a>
      <h1>{{name}}</h1>
      <p>{{description}}</p>
      <footer>
        <h2>{{formatPrice price}}</h2>
        <a class="add_cart" href="#">Add to Cart</a>
      </footer>
    </article><!--
  --><aside>
      <h3>Nutritional Information</h3>
      <table>
        <tbody>
            <tr>
              <td>Protein</td>
              <td>{{formatDecimalFourPlaces nutriInfo.protein}}</td>
            </tr>
            <tr>
              <td>Fat (total)</td>
              <td>{{formatDecimalFourPlaces nutriInfo.fat}}</td>
            </tr>
            <tr>
              <td>Carbohydrate</td>
              <td>{{formatDecimalFourPlaces nutriInfo.carbs}}</td>
            </tr>
            <tr>
              <td>Energy (kj)</td>
              <td>{{formatDecimalFourPlaces nutriInfo.energyKj}}</td>
            </tr>
            <tr>
              <td>Energy (kcal)</td>
              <td>{{formatDecimalFourPlaces nutriInfo.energyKcal}}</td>
            </tr>
            <tr>
              <td>Sugar</td>
              <td>{{formatDecimalFourPlaces nutriInfo.sugar}}</td>
            </tr>
        </tbody>
      </table>
    </aside><!--
  --><div class="nav next">
      <img src="/images/nav-next.png"/>
    </div>
  </section>
</div>
